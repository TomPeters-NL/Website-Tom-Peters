{% extends "base.njk" %}

{% block title %}
Tom Peters, MSc. | Contact
{% endblock title %}

{% block stylesheet %}
<link rel="stylesheet" href="{{ '/css/contact.css' | url }}">
{% endblock stylesheet %}

{% block javascript %}
<script type="text/javascript" src="{{ '/js/contact.js' | url }}"></script>
{% endblock javascript %}

{% block content %}
<h1>Contact</h1>

<div id="contact-block-overlay">
    <div id="contact-block-window">
        <div class="anicon emphasis-red" id="contact-block-header">Q</div>
        <div id="contact-block-text">
            This website is currently hosted with GitLab Pages, which means I do not have access to server-side PHP functionality.
            <br><br>
            Or in other words, the really nifty contact form visible in the background does not work.
            <br><br>
            So I would kindly like to request you contact me via LinkedIn and I'll respond as soon as I am able.
        </div>
        <div id="contact-block-link-container">
            <a class="contact-block-link" href="https://www.linkedin.com/in/1992-tom-peters/" target="_blank" rel="noopener noreferrer">
                <img id="contact-block-linkedin" src="/img/logo/LinkedIn.svg" alt="The LinkedIn logo.">
            </a>
        </div>
    </div>
</div>

<div class="contact-form-container">
    <form id="contact-form" action="#" method="post">
        <label class="contact-form-label" for="contact-form-name">Name</label>
        <input class="contact-form-text" type="text" name="name" id="contact-form-name" required>

        <label class="contact-form-label" for="contact-form-contact-information">E-mail or Phone Number</label>
        <input class="contact-form-text" type="text" name="contact" id="contact-form-contact-information" required>

        <label class="contact-form-label" for="contact-form-message">Message</label>
        <textarea class="contact-form-textarea" name="message" id="contact-form-message" required></textarea>

        <button type="submit" id="contact-form-submit">Submit</button>
    </form>
</div>

<div id="contact-success">
    <h2 class="emphasis-green">Success!</h2>
    <div id="contact-success-text">
        Your message has been sent on its way.
        <br><br>
        Thank you for reaching out, I'll contact you soon.
    </div>
    <img id="contact-success-signature" src="/img/artwork/Signature.png" alt="My signature."></a>
</div>

<div id="contact-error">
    <div id="contact-error-close">
        x
    </div>
    <div id="contact-error-text">
        Something went wrong while sending your message. Please try again later.
    </div>
</div>
{% endblock content %}}